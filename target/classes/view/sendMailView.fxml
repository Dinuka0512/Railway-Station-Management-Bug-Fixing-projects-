<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ijse.gdse.railway_management.railway_management_system.controller.sendMailController">
   <children>
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="210.0" layoutY="22.0" prefHeight="28.0" prefWidth="157.0" style="-fx-background-color: #ffffff;" text="Send Mail">
         <font>
            <Font name="Times New Roman Bold" size="24.0" />
         </font>
      </Label>
      <TextField fx:id="txtSubject" layoutX="100.0" layoutY="67.0" prefHeight="26.0" prefWidth="344.0" promptText="subject">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </TextField>
      <TextArea fx:id="txtBody" layoutX="100.0" layoutY="132.0" prefHeight="170.0" prefWidth="344.0" promptText="body">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </TextArea>
      <Button layoutX="428.0" layoutY="338.0" mnemonicParsing="false" onAction="#sendUsingSendgridOnAction" prefHeight="27.0" prefWidth="158.0" style="-fx-background-color: #2da2e1;" text="Send Using Sendgrid" textFill="#f7f7f7">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
      <Button layoutX="284.0" layoutY="338.0" mnemonicParsing="false" onAction="#sendUsingGmailOnAction" prefHeight="27.0" prefWidth="131.0" style="-fx-background-color: #2da2e1;" text="Send Using Gmail" textFill="#f7f7f7">
         <font>
            <Font name="System Bold" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
